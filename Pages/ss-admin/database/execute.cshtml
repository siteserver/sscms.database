@page
@{ Layout = "_Layout"; }

<div style="height: 10px"></div>

<el-form ref="form" :model="form" size="small">
  <el-form-item label="SQL命令" prop="execute" name="execute" :rules="{ required: true, message: '请输入SQL命令' }">
    <el-input type="textarea" :rows="5" v-model="form.execute"></el-input>
    <div class="tips">
      需要执行的SQL语句，此SQL语句将直接对数据库进行操作
    </div>
  </el-form-item>
  <el-form-item label="SecurityKey" prop="securityKey" name="securityKey" :rules="{ required: true, message: '请输入SecurityKey' }">
    <el-input v-model="form.securityKey"></el-input>
    <div class="tips">
      请进入系统根目录，打开 sscms.json 获取SecurityKey的值
    </div>
  </el-form-item>
</el-form>

<div style="text-align: center;">
  <el-divider></el-divider>
  <div style="height: 10px"></div>
  
  <el-button size="small" type="primary" v-on:click="btnSubmitClick">
    执 行
  </el-button>
</div>

@section Scripts{
  <script src="/assets/database/js/execute.js" type="text/javascript"></script>
}